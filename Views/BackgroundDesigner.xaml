							<Setter TargetName="Rbackground" Property="Margin" Value="0,-5,0,0"/>
							
							<Setter TargetName="RmainM" Property="Height" Value="55"/>
							<Setter TargetName="Rmainborder" Property="Height" Value="55"/>
							<Setter TargetName="Rbackground" Property="Height" Value="65"/>

							<Setter TargetName="Rmainborder" Property="Width" Value="145"/>
							</DataTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>

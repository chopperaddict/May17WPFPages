							<Setter TargetName="Rmainborder" Property="Height" Value="68"/>
							<Setter TargetName="Rbackground" Property="Height" Value="70"/>

						</DataTrigger>
						<DataTrigger Binding="{Binding IsMouseOver,RelativeSource={RelativeSource Self}}" Value="true">
							<Setter TargetName="Btn5Content" Property="Content" Value="Toggle display direction "/>

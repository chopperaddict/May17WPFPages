	<Window.Resources>
		<data:BankCollection x:Key="BankData" />
		<data:CustCollection x:Key="CustData" />
		<data:DetCollection x:Key="DetData" />

		<Style x:Key="GreenBtn" TargetType="Button">
			<!--<Setter Property="Background" Value="Red" />-->
			<Style.Triggers>
					<!--<Setter Property="Background" Value="Gray" />-->
				<Trigger Property="IsEnabled" Value="False">
					<Setter Property="Background">
						<Setter.Value>
							<LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
								<GradientStop Color="Gray" Offset="0" />
								<GradientStop Color="White" Offset="1" />
							</LinearGradientBrush>
						</Setter.Value>
					</Setter>
				</Trigger>
				<Trigger Property="IsEnabled" Value="False">
						<Setter Property="Background">
						<Setter.Value>
							<LinearGradientBrush  StartPoint="0.5,0" EndPoint="0.5,1">
								<GradientStop Color="#A5FB90" Offset="0.314"/>
								<GradientStop Color="#79FB59" Offset="0.553"/>
								<GradientStop Color="#FF00FF00" Offset="1"/>
							</LinearGradientBrush>
						</Setter.Value>
					</Setter>
				</Trigger>
			</Style.Triggers>
				<!--create an elegant left to right light-> Dark gradient as a background-->

				<!--<LinearGradientBrush StartPoint=".8,0" EndPoint="0,.5">
					<GradientStop Color="Green" Offset="1" />
					<GradientStop Color="#ffffff" Offset="0" />
				</LinearGradientBrush>
			</Button.Background>-->
		</Style>


		<Style x:Key="ToggleButtonOnmouseover" TargetType="Button">
			<Setter Property="Background">
				<Setter.Value>
					<LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
						<GradientStop Color="Blue" Offset="0" />
						<GradientStop Color="White" Offset="1" />
					</LinearGradientBrush>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background">
						<Setter.Value>
							<LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
								<GradientStop Color="Green" Offset="0" />
								<GradientStop Color="DarkOrange" Offset="1" />
							</LinearGradientBrush>
						</Setter.Value>
					</Setter>
				</Trigger>
			</Style.Triggers>
		</Style>


	</Window.Resources>


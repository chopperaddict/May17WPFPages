				</DatePicker>
				<!--<TextBox Name="CloseDateEdit"
								 Grid.Row="8"
								 Grid.Column="2"
								 Margin="3,3,3,3"
								 Height="25"
								 Width="75"
								 HorizontalAlignment="Left"
								 IsEnabled="True"
								 Background="{StaticResource Gray3}"
								 HorizontalContentAlignment="Center"
								 VerticalContentAlignment="Center"

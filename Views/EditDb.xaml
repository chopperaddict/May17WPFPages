				<RowDefinition Height="35" />
				<RowDefinition Height="35" />
				<RowDefinition Height="*" />
				<RowDefinition Height="15" />
			</Grid.RowDefinitions>
			<TextBox Name="BanknoEdit"
								 Grid.Row="1"
								 Grid.Column="1"
								 Margin="3,3,3,3"
								 Height="25"
								 IsEnabled="True"
								 Background="{StaticResource Gray3}"
								HorizontalAlignment="Left"
								 HorizontalContentAlignment="Center"
								TextChanged="Data_TextChanged"
								 VerticalContentAlignment="Center"
								 Text="{Binding BankNo, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" 
								LostFocus="BanknoEdit_LostFocus" />

			<TextBox x:Name="CustnoEdit"
								 Grid.Row="2"
								 Grid.Column="1"
								 Margin="1"
								 Height="25"
								 IsEnabled="True"
								 IsReadOnly="False"
								 Background="{StaticResource Gray3}"
								 Foreground="{StaticResource Black0}"

<!--#region Buttonbar-->
		<Grid
			    Grid.Row="2"
			    Grid.Column="1"
			    Grid.ColumnSpan="2"
			    Margin="0,5,5,3"
>
			<StackPanel
		    Grid.Column="0"
		    Grid.Row="0"
		    Orientation="Horizontal"
		    HorizontalAlignment="Right"
		    >

				<Button  x:Name ="SaveBtn"
					Background="DarkGreen"
					Foreground="White"
					Click="Save_Click"
					Grid.Column="2"
					Grid.Row="3"
					IsEnabled="False"
					Width="120"
					Height="30"
					Margin="5"
					Content =" Save Changes"
					Visibility="Hidden"/>
				<Button 
					Background="Crimson"
					Foreground="White"
					Click="ButtonBase_OnClick"
					Grid.Column="2"
					Grid.Row="3"
					Width="70"
					Height="30"
					Content =" Close"/>
			</StackPanel>
		</Grid>
		<!--#endregion Buttonbar-->

	</Grid>
</Window>

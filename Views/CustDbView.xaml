		<!--#region buttons2-->

		<Button x:Name="SaveBttn"
				Background="{StaticResource HeaderBrushRed}"
				Click="SaveBtn"
				Content="Save Changes"
				Foreground="White"
				Grid.Column="3"
				Grid.Row="2"

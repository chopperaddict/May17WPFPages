					    VerticalAlignment="Center" 
					    Height="24" 
						LostFocus ="Edit_LostFocus"
					   TabIndex="0"
					    Width="90" 
					    Canvas.Left="108" 
					    Canvas.Top="21"/>

				<TextBlock x:Name="textBlock_Copy" 
					    Foreground="White"
					    HorizontalAlignment="Center" 
					    Padding="5,5,5,5"

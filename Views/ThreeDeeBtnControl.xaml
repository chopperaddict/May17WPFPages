	<Border   x:Name="Frame"
				Height="{Binding Path=Height, ElementName=ThreeDBtn}"
				Width="{Binding Path=Height, ElementName=ThreeDBtn}"
				UseLayoutRounding="True"
				BorderThickness="0" Margin="7,12,8,14" >

		<Button x:Name="ThreeDBtn"
				Height="{Binding Path=Height, ElementName=ThreeDBtn}"
				Width="{Binding Path=Height, ElementName=ThreeDBtn}"
				FontStyle="{Binding Path=FontDecoration}"
				FontSize="{Binding Path=TextSize}"
				Foreground="{Binding Path=BtnTextColor}"
				Content="{Binding Path=BtnText}"
				MouseEnter="ThreeDBtn_MouseEnter"
			  MouseLeave="ThreeDBtn_MouseLeave"
				Margin="12,20,12,18" >

			<Button.Template>
				<ControlTemplate TargetType="{x:Type Button}" x:Name="ThreeDBtnTemplate">

					<Grid	Name="InnerBtnGrid" 
							Height="Auto" 
							Width="Auto" 
							Margin="-106,-100,-101,-95">

						<!--#region  Ellipses-->
			  <!--#region Information--> 
				<!--The available Radial gradients are available...
						MultiRedRadial, MultiGreenRadial, MultiBlueRadial, MultiGrayRadial  -->
			<!--#endregion-->
						<!--Main Frontal Ellipse-->
						<Ellipse x:Name="H1"
								Margin="106,76,102,99"
								Height="auto"
								Width="auto"
								Stroke="{Binding BtnBorder}"
								Fill="{Binding FillTop}"
								StrokeThickness="{Binding Path=BorderWidth}"
								Panel.ZIndex="3" 
								PreviewMouseLeftButtonDown="H1_PreviewMouseLeftButtonDown"/>

						<!--Button Top Ellipse when Mouse Down-->
						<Ellipse x:Name="H1Dummy"
								Margin="105,97,98,77"
								Height="{Binding Path=Height, ElementName=H1}"
								Width="{Binding Path=Height, ElementName=H1}"
								Fill="{Binding FillTop}"   							   
								Stroke="Black"
								StrokeThickness="1"
								Panel.ZIndex="3"
								Visibility="Hidden" Grid.RowSpan="1"/>

						<!--Button Side itself-->
						<Ellipse x:Name="H2"
								Margin="98,76,90,78"
								Height="{Binding Path=Height, ElementName=H1}"
								Width="{Binding Path=Height, ElementName=H1}"						     								   
								StrokeThickness="1"
								Stroke="Black"
								Panel.ZIndex="2"
								Fill="{Binding FillSide}"   />

						<!--Button Side - DUMMY-->
						<Ellipse x:Name="H2Dummy"
								Margin="101,80,93,78"
								Height="{Binding Path=Height, ElementName=H2}"
								Width="{Binding Path=Height, ElementName=H2}"						     								   
								StrokeThickness="1"
								Stroke="Black"
								Panel.ZIndex="2"
								Fill="{Binding FillSide}" 
								Visibility="Hidden"
								Grid.RowSpan="1" />

						<!--Button  Hole itself-->
						<Ellipse x:Name="H3"
								Margin="102,78,96,77"
								Height="{Binding Path=Height, ElementName=H1}"
								Width="{Binding Path=Height, ElementName=H1}"						     								   
								Stroke="Black"
								StrokeThickness="1"							   
								Fill="{Binding Path=FillHole}" 
								Panel.ZIndex="1" Grid.RowSpan="1" />

						<ContentPresenter  x:Name="Btn6Content"
								Height="{Binding Path=Height, ElementName=H1}"
								Width="{Binding Path=Height, ElementName=H1}"						     								   
								Margin="{Binding Path=TextOffsetMargin, ElementName=ThreeDeeBtnControl}"
								HorizontalAlignment="Center"
								VerticalAlignment="Center" 
								Panel.ZIndex="4" Grid.RowSpan="2" >
						</ContentPresenter>
						<!--Margin="20 6 0 0"-->

						<!--#endregion  Ellipses-->

					</Grid>

					<ControlTemplate.Triggers>
						<!--Normal Display - NOT MouseOver -->
						<DataTrigger Binding="{Binding IsMouseOver,RelativeSource={RelativeSource Self}}" Value="false">
							<Setter TargetName="Btn6Content" Property="Margin" Value="5 -30  0  0"/>

							<!--// Handle Ellipse Visibility //-->
							<!--<Setter TargetName="H1" Property="Visibility" Value="Visible"/>
							<Setter TargetName="H2" Property="Visibility" Value="Visible"/>-->
							<!--<Setter TargetName="H2" Property="Fill" Value="{Binding Path=FillSide}"	/>
							<Setter TargetName="H3" Property="Fill" Value="{Binding Path=FillHole}"/>-->

							<!--#region unused-->

<Window x:Class="WPFPages.Views.DetailsDbView"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:local="clr-namespace:WPFPages.Views"
	  mc:Ignorable="d"
	  Title="Details A/C Editor"
	  Height="450"
		MinHeight="400"
		MinWidth="760"
	  Width="800"
		Closing="Window_Closing"
		Loaded="Window_Loaded">

	<Window.Resources>

		<!--This is how to "point" at data to automatically conect 
		fields to the data itself with no other actions needed-->

		<!--This one is used in here-->
		<!--<local:BankCollection x:Key="BankData"/>-->

		<!--<bank:BankAccountViewModel x:Key="BankViewData"/>-->

		<Style x:Key="HeaderStyleGreen" TargetType="DataGridColumnHeader">
			<Setter Property="Background" Value="{StaticResource HeaderBrushGreen}" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="BorderBrush" Value="{StaticResource HeaderBorderBrushGreen}" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="SnapsToDevicePixels" Value="True" />
			<Setter Property="HorizontalContentAlignment" Value="Center" />
			<Setter Property="MinWidth" Value="0" />
			<Setter Property="MinHeight" Value="30" />
			<Setter Property="Cursor" Value="Hand" />
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property= "Background" Value="{StaticResource HeaderBorderBrushGreen}" />
				</Trigger>
			</Style.Triggers>
		</Style>

	</Window.Resources>
	<Grid>

		<!--#region grid setup-->

		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="5*" />
			<RowDefinition Height="135" />
			<RowDefinition Height="10"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="15"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="110"/>
			<ColumnDefinition Width="110"/>
			<ColumnDefinition Width="10"/>
		</Grid.ColumnDefinitions>

		<Grid.Background>
			<!--create an elegant left to right light-> Dark gradient as a background-->
			<LinearGradientBrush  StartPoint="1,0" EndPoint="0,1">
				<GradientStop Color="#00FF00" Offset="0"/>
				<!--<GradientStop Color="#DDFFDD" Offset="0.553"/>-->
				<GradientStop Color="#00000000" Offset="1"/>
			</LinearGradientBrush>
		</Grid.Background>

		<!--#endregion grid setup-->

		<Menu
			Background="Transparent"
			Grid.Column="1"
			Grid.Row="0"
			Height="30" 
			HorizontalAlignment="Left"
			Margin="5"
			Width="auto">

			<MenuItem  Header="_Linq Queries" 
					Width="80" 
				    Foreground="{StaticResource Black1}">
				<MenuItem Header="A/c Type 1 Only"
					    Background="#35F6FB" 
					    Click="Linq1_Click"
					    Foreground="Black"
					    IsCheckable="false"/>
				<MenuItem Header="A/c Type 2 Only"
					Background="#35F6FB" 
					Click="Linq2_Click"
					Foreground="Black"
					IsCheckable="False"/>
				<MenuItem Header="A/c Type 3 Only"
					Background="#35F6FB" 
					Click="Linq3_Click"
					Foreground="Black"
					IsCheckable="False"/>
				<MenuItem Header="A/c Type 4 Only"
					Background="#35F6FB" 
					Click="Linq4_Click"
					Foreground="Black"
					IsCheckable="False"/>
				<MenuItem Header="Multi A/C Holders"
					Background="#35F6FB" 
					Click="Linq5_Click"
					IsCheckable="False"
					Foreground="Black"/>
				<Separator />
			</MenuItem>

			<MenuItem  Header="Filtering" 
				    Click="Filter_Click"
					Width="60" 
				    Foreground="{StaticResource Black1}">
				<!--<MenuItem Header="Setup Filter"
					    Background="#35F6FB" 
					    Click="Filter_Click"
					    Foreground="Black"
					    IsCheckable="false"/>-->
			</MenuItem>

			<MenuItem  Header="Options" 
				    Click="Options_Click"
					Width="50" 
				    Foreground="{StaticResource Black1}">
			</MenuItem>

			<MenuItem  Header="Exit..." 
				    Click="Exit_Click"
					Width="50" 
				    Foreground="{StaticResource Black2}">
				<!--<MenuItem Header="Setup Filter"
					    Background="#35F6FB" 
					    Click="Filter_Click"
					    Foreground="Black"
					    IsCheckable="false"/>-->
			</MenuItem>
		</Menu>



		<DataGrid x:Name="DetGrid"
				AlternatingRowBackground="{StaticResource Green4}"
				AutoGenerateColumns="False"
				ColumnHeaderStyle ="{StaticResource HeaderStyleGreen}"
				Grid.Row="1"
				Grid.Column="1"
				Grid.ColumnSpan="4" 
			    CanUserAddRows="False"
				Grid.RowSpan="1" 
				HorizontalAlignment="Stretch" 
				IsSynchronizedWithCurrentItem="True"
				Margin="0,0,10,8"
				Padding="-10"
				RowEditEnding="ViewerGrid_RowEditEnding"
				SelectionChanged="DetGrid_SelectionChanged"
				SelectionMode="Single"
				SelectionUnit="FullRow"
				IsTabStop="False"
			    VerticalContentAlignment="Center"
				VerticalAlignment="Stretch"
				VerticalGridLinesBrush="{StaticResource Green2}"	   
			    >
			<!--SelectedIndex="{Binding SelectedIndex}"
				SelectedItem="{Binding SelectedItem}"-->
			<!--DataGridCell.Selected="BankGrid_Selected"-->
			<!--ItemsSource="{Binding Source={StaticResource BankData}}"-->

			<DataGrid.Background>
				<!--create an elegant left to right light-> Dark gradient as a background-->
				<LinearGradientBrush EndPoint="0.0,0" StartPoint="1.3,1">
					<GradientStop Color="#DDFFDD" Offset="0.453"/>
					<GradientStop Color="#FF00FF00" Offset="1"/>
				</LinearGradientBrush>
			</DataGrid.Background>

			<DataGrid.Resources>
				<SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="DarkGreen"/>
				<Style TargetType="DataGridCell">
					<Style.Triggers>
						<Trigger Property="DataGridCell.IsSelected" Value="True">
							<Setter Property="FontWeight" Value="Bold" />
							<Setter Property="Foreground" Value="White" />
							<Setter Property="Background" Value="DarkGreen" />
						</Trigger>
					</Style.Triggers>
				</Style>
			</DataGrid.Resources>

			<!--#region bank Columns-->
			<DataGrid.Columns >
				<DataGridTemplateColumn Header="Id" Width="40"
									x:Name="ID"
									    SortMemberPath="Id" >
					<DataGridTemplateColumn.CellTemplate >
						<DataTemplate >
							<TextBlock 
									Text="{Binding Id}"
									HorizontalAlignment="Center"
									VerticalAlignment="Top"/>
						</DataTemplate >
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn >

				<DataGridTextColumn Header="Customer #" Binding="{Binding CustNo, 
									Mode=TwoWay, 
									UpdateSourceTrigger=PropertyChanged}">
				</DataGridTextColumn>

				<DataGridTextColumn Header="Bank #" Width="80" 
								    SortMemberPath="BankNo"
									Binding ="{Binding BankNo, 
									Mode=TwoWay, 
									UpdateSourceTrigger=LostFocus}"
									>
				</DataGridTextColumn>

				<DataGridTextColumn Header="Type" Width="40" 
								    SortMemberPath="AcType"
									Binding="{Binding AcType, 
									Mode=TwoWay, 
									UpdateSourceTrigger=LostFocus}"/>

				<DataGridTextColumn Header="Balance" Width="90" 
									SortMemberPath="Balance"									
									Binding="{Binding Balance, 
									Mode=TwoWay, 
									UpdateSourceTrigger=LostFocus,
									StringFormat='£ ##,###,###.00'}"/>

				<DataGridTextColumn Header="Interest" Width="60" 
									SortMemberPath="IntRate"
									Binding="{Binding IntRate, Mode=TwoWay, 
									UpdateSourceTrigger=LostFocus,
									StringFormat='0.00'}"/>
				<!--CellStyle="{StaticResource CenterText}"-->

				<!--the next 2 show 2 ways to format a date - 1 a Converter the other a direct Format string-->
				<DataGridTemplateColumn Header="Open Date" Width="80" SortMemberPath="ODate">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Path=ODate,
								StringFormat='dd/MM/yyyy'}"  	 									
								     HorizontalAlignment="Center"
									VerticalAlignment="Top"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
					<DataGridTemplateColumn.CellEditingTemplate>
						<DataTemplate>
							<DatePicker SelectedDate="{Binding Path=ODate, 
								StringFormat='dd/MM/yyyy',
									Mode=TwoWay, 
									UpdateSourceTrigger=PropertyChanged}">
							</DatePicker>
						</DataTemplate>
					</DataGridTemplateColumn.CellEditingTemplate>
				</DataGridTemplateColumn>

				<DataGridTemplateColumn Header="Close Date" Width="80" SortMemberPath="CDate">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Path=CDate, 
									StringFormat='dd/MM/yyyy'}"
									HorizontalAlignment="Center"
									VerticalAlignment="Top"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
					<DataGridTemplateColumn.CellEditingTemplate>
						<DataTemplate>
							<DatePicker SelectedDate="{Binding Path=CDate, 
								StringFormat='dd/MM/yyyy',
									Mode=TwoWay, 
									UpdateSourceTrigger=PropertyChanged}"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellEditingTemplate>
				</DataGridTemplateColumn>

			</DataGrid.Columns>
			<!--#endregion bankfields-->


		</DataGrid>

		<Grid
			DataContext="BankGrid"
			Grid.Row="2"
			Grid.Column="1"
			VerticalAlignment="Stretch"
			HorizontalAlignment="Stretch" 
			Margin="4,0,0,3" RenderTransformOrigin="0.632,0.51"
			>
			<Grid.RowDefinitions>
				<RowDefinition Height="50"/>
				<RowDefinition Height="60*" />
			</Grid.RowDefinitions>

			<Canvas  x:Name="DataFields"
				Grid.Row="0"
				Grid.RowSpan="2"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch" 
				Margin="0,2">

				<!--#region Text Fields-->

				<TextBlock x:Name="textBlock" 
					Foreground="Black"
				FontWeight="Bold"
					Grid.Row="1"
					Grid.Column="3"
					HorizontalAlignment="Center" 
					Padding="5,5,5,5"
					    
					Text="Customer #" 
					VerticalAlignment="Center" 
					Height="25" 
					Width="70" 
					Canvas.Left="2" 
					Canvas.Top="31"/>

				<TextBox x:Name="Custno" 
					   FontSize="12"
					    Foreground="Black"
					    HorizontalAlignment="Center" 
					   HorizontalContentAlignment="Center"
					    Padding="5,3,0,0"
					    Text="{Binding CustNo, UpdateSourceTrigger=LostFocus, FallbackValue=Cust  #}" 
					    VerticalAlignment="Center" 
					    Height="24" 
					   TabIndex="0"
					    Width="90" 
					    Canvas.Left="86" 
					    Canvas.Top="29"/>

				<TextBlock x:Name="textBlock_Copy" 
					Foreground="Black"
				FontWeight="Bold"
					    HorizontalAlignment="Center" 
					    Padding="5,5,5,5"
					    Text="Bank A/c #" 
					    VerticalAlignment="Center" 
					    Height="25" 
					    Width="70" 
					     Canvas.Left="-2" 
					     Canvas.Top="56"/>

				<TextBox x:Name="Bankno" 
					   FontSize="12"
					    Foreground="Red"
					    HorizontalAlignment="Center" 
					   HorizontalContentAlignment="Center"
						Padding="5,3,0,0"
					    Text="{Binding BankNo,UpdateSourceTrigger=LostFocus, FallbackValue=Bank A/c #}" 
					    VerticalAlignment="Center" 
					    Height="24" 
					    Width="90" 
					   TabIndex="1"
					   Canvas.Left="86" 
					   Canvas.Top="56" RenderTransformOrigin="0.422,2.208"/>

				<TextBlock x:Name="textBlock_Copy5" 
					Foreground="Black"
				FontWeight="Bold"
				HorizontalAlignment="Center" 
				Padding="5,5,5,5"	 					    
				Text="A/c Type" 
				VerticalAlignment="Center" 
				Height="25" 
				Width="70" 
				Canvas.Left="2" 
				Canvas.Top="84"/>

				<TextBox x:Name="acType" 
				FontSize="12"
				Foreground="Black"
				HorizontalAlignment="Center" 
				HorizontalContentAlignment="Center"
				Padding="5,3,0,0"
				Text="{Binding AcType, FallbackValue=AcType, UpdateSourceTrigger=LostFocus}" 
			     TextAlignment="Center"
				VerticalAlignment="Center" 
				Height="24" 
				Width="90" 
				TabIndex="2"
				Canvas.Left="86" 
				Canvas.Top="84" 
				SelectionChanged="SelectionChanged" 
				TextChanged="TextChanged"/>

				<TextBlock x:Name="textBlock_Copy1" 
					Foreground="Black"
				FontWeight="Bold"
				    HorizontalAlignment="Center" 
				    Padding="5,5,5,5"
					    
				    Text="A/c Balance" 
				    VerticalAlignment="Center" 
				    Height="25" 
				    Width="84" 
				    Canvas.Left="194" 
				    Canvas.Top="25" RenderTransformOrigin="0.457,-0.36"/>

				<TextBox x:Name="balance" 
				FontSize="16"
					   FontWeight="DemiBold"
				Foreground="Red"
				HorizontalAlignment="Center" 
				HorizontalContentAlignment="Center"
				Padding="5,3,0,0"
				Text="{Binding Path=Balance, FallbackValue=Balance, UpdateSourceTrigger=LostFocus}" 
			     TextAlignment="Center"
				VerticalAlignment="Center" 
				Height="32" 
				Width="104" 
				TabIndex="3"
				SelectionChanged="SelectionChanged" 
				TextChanged="TextChanged"
				Canvas.Left="184" 
				Canvas.Top="55"/>


				<TextBlock x:Name="textBlock_Copy3" 
				Foreground="Black"
				FontWeight="DemiBold" 
				Padding="5,5,5,5"
				Text="Date Opened" 
			     TextAlignment="Center"
				Height="24" 
				Width="88" 
				Canvas.Left="306" 
				Canvas.Top="57"/>

				<TextBox x:Name="odate" 
				FontSize="12" 
				HorizontalContentAlignment="Center"
				Padding="5,3,0,0"
				Text="{Binding ODate, FallbackValue=ODate, UpdateSourceTrigger=LostFocus, StringFormat='dd/MM/yyyy'}" 
			     TextAlignment="Center" 
				Height="24" 
				Width="90" 
				TabIndex="4"
				Canvas.Left="399" 
				Canvas.Top="60"
				SelectionChanged="SelectionChanged" 
				TextChanged="TextChanged"/>

				<TextBlock x:Name="textBlock_Copy4" 
					     FontWeight="Bold"
					Foreground="Black" 
				Padding="5,5,5,5"
				Text="Close Date" 
				Height="25" 
				Width="70" 
				Canvas.Left="309" 
				Canvas.Top="83"/>

				<TextBox x:Name="cdate" 
				   FontSize="12"
				Foreground="Black" 
				HorizontalContentAlignment="Center"
				Padding="5,3,0,0"
				Text="{Binding CDate, FallbackValue=CDate, UpdateSourceTrigger=LostFocus, StringFormat='dd/MM/yyyy'}" 
			     TextAlignment="Center" 
				Height="24" 
				TabIndex="5"
				Width="90" 
				SelectionChanged="SelectionChanged" 
				TextChanged="TextChanged"
				Canvas.Left="399" 
				Canvas.Top="86"/>
				<TextBlock x:Name="Count" 
				Background="DarkGray"	    
				Foreground="Red"
			     FontWeight="DemiBold"
			     FontSize="14" 
				Padding="5,3,5,5"
				Height="24"
				Text=" Counter"
				TextAlignment="Center"
				TextTrimming="WordEllipsis" 
				Width="88" 
			     Canvas.Left="401" Canvas.Top="17" 
			     />
				<!--#endregion Text Fields-->
			</Canvas>

		</Grid>

		<Button x:Name="SaveBttn"
				Background="{StaticResource HeaderBrushGreen}"
				Click="SaveBtn"
				Content="Save Changes"
				Foreground="White"
				Grid.Column="3"
				Grid.Row="2"
				HorizontalAlignment="Center"
				IsEnabled="False"
				TabIndex="6"
				VerticalAlignment="Top"
				Margin="10,61,0,0"
				Height="30"
				Template="{StaticResource HorizontalGradientTemplateGreen}" 
				Width="100"
			/>
		<Button
				Background="{StaticResource HeaderBrushGreen}"
				Click="Close_Click"
				Content="Close"
				Foreground="White"
				Grid.Column="3"
				Grid.Row="2"
				Height="30"
				HorizontalAlignment="Center"
				KeyDown="ShowBank_KeyDown" 
				Template="{StaticResource HorizontalGradientTemplateGreen}" 
				TabIndex="7"
				VerticalAlignment="Top"
				Width="100" Margin="10,99,0,0" />
		<CheckBox x:Name="OntopChkbox"
				Click="OntopChkbox_Click"
				Content="Keep on Top"
				Foreground="Black"
				FontWeight="Medium"
				Grid.Row="2" 
				Grid.ColumnSpan="1" 
				Grid.Column="2" 
				Height="25"
				HorizontalAlignment="Left"
				IsChecked="true"
				Margin="10,10,0,100"
				VerticalAlignment="Center"
				Width="100"  
			     />
		<Button x:Name="MultiAccounts"
					Background="{StaticResource HeaderBrushGreen}"
					Click="MultiAccts_Click"
					Content="Multi Accounts"
					Foreground="White"
					Grid.Row="2"
					Grid.Column="2"
					HorizontalAlignment="Center"
					IsEnabled="true"
					TabIndex="6"
					VerticalAlignment="Top"
					Height="30"
					Template="{StaticResource HorizontalGradientTemplateGreen}" 
					Width="100" Margin="5,99,5,0" 
					/>
		<CheckBox x:Name="LinkRecords"				    
					    Click="LinkRecords_Click"
					    Content="Link All Viewers" 
					    Foreground="Red"
					    Grid.ColumnSpan="2" Grid.Column="2" Margin="9,35,109,75" Grid.Row="2"				   />
	</Grid>

</Window>

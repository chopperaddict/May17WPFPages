				VerticalScrollBarVisibility="Auto" 
				Visibility="Visible"
				DragEnter="TextBox_DragEnter"
				PreviewDrop="Textbox_PreviewDrop"
				PreviewDragOver="TextBox_PreviewDragOver" 
			   TextChanged="textBox_TextChanged"

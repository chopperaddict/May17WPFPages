			<TextBox x:Name="textBox" 
				AcceptsReturn="True" 
				AcceptsTab="True" 
				AutoWordSelection="True"
				GiveFeedback="textBox_GiveFeedback"
				Grid.Row="3"
				Grid.RowSpan="1"
				Grid.Column="1"
				Grid.ColumnSpan="3"
				HorizontalContentAlignment="Stretch" 

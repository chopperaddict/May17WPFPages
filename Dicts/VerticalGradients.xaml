				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
		<Setter Property="FontSize" Value="12" />
		<Style.Triggers>
			<Trigger Property="IsMouseOver"  Value="True">
				<Setter Property="Height" Value="25"/>				
				<Setter Property="Background" Value="{StaticResource Blue4}"/>
				<Setter Property="MenuItem.Foreground" Value="{StaticResource White0}"/>
				<!--<Setter Property="Fill" TargetName="Bd" Value="{StaticResource White0}"/>-->
			</Trigger>
		</Style.Triggers>
	</Style>


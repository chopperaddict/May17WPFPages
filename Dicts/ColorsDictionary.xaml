	<!--%%%%%%%%%%%%%%%%%%%%%%%%%% MYCONTROLTEMPLATE %%%%%%%%%%%%%%%%%%%%%%%%%%%%-->
	<!--%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%-->
	<!--A BUTTON WITH A DROP SHADOW THAT DEMONSTRATES THE USE OF [CONTENTPPRESENTER]
		TO DISPLAY THE TEXT DEFINED IN THE BUTTON CONTROL ITSELF IN ITS XAML CODE-->
	<ControlTemplate x:Key="MyControlTemplate" TargetType="Button">
		<Grid>
			<!--This Is how to create a drop shadow style Rectangle shaped button, 
				using the color defined in the button declaration xaml code -->
			<Border Background="{TemplateBinding BorderBrush}" 
					CornerRadius="10"
				   Margin="5 5 0 0" >
			</Border>
			<!--This border creates the frontmost button outline and fill color/Style--><!--
			<Border BorderBrush="Black" BorderThickness="1"					   
					Background="{TemplateBinding Background}" 
				   CornerRadius="8"
					Margin="0 0 5 5">
				--><!--Adding this one line lets the control above display the "Content" property--><!--
				<ContentPresenter/>
			</Border>-->
		</Grid>
	</ControlTemplate>

	<!--%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%-->
	<!--%%%%%%%%%%%%%%%%%%%%%% MYELLIPSECONTROLTEMPLATE %%%%%%%%%%%%%%%%%%%%%%%%%-->
	<!--%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%-->
	<!--A BUTTON WITH A DROP SHADOW THAT DEMONSTRATES THE USE OF [CONTENTPPRESENTER]
		TO DISPLAY THE TEXT DEFINED IN THE BUTTON CONTROL ITSELF IN ITS XAML CODE-->
	<ControlTemplate x:Key="MyEllipseButtonTemplate" TargetType="Button">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="{DynamicResource Height}"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="150"/>
			</Grid.ColumnDefinitions>
			<!--This Is how to create a drop shadow, using the color 
				defined in the button declaration xaml code 
				NB we MUST use TemplateBinding to access default properties like Background-->
			<Ellipse Fill="{TemplateBinding Foreground}" Margin="5 5 0 0"/>
			<!--This border creates the frontmost button outline and fill color/Style-->
			<Ellipse Fill="{TemplateBinding Background}" Margin="0 0 5 5"/>
			<!--//This is used to show the text Content-->
			<Border Background="Transparent"		   
					Margin="0">
				<!--Adding this one line lets the control above display the "Content" property-->
				<ContentPresenter/>
			</Border>
		</Grid>

	</ControlTemplate>

